@comment{social construction of group identity, intersectionality as theoretical construct}
@comment{Target: Philosophy journals, social ontology, philosophy of science}

@article{BrightMalinskyThompson2016,
  title = {Causally Interpreting Intersectionality Theory},
  author = {Bright, Liam Kofi and Malinsky, Daniel and Thompson, Morgan},
  journal = {Philosophy of Science},
  volume = {83},
  number = {1},
  pages = {60--81},
  year = {2016},
  doi = {10.1086/684173},
  note = {Seminal paper showing characteristic claims of intersectionality literature can be interpreted causally. Graphical causal modeling allows claims about causal effects of occupying intersecting identity categories to be clearly represented and empirically tested. Alleviates difficulties in drawing testable predictions from intersectionality theory. Addresses concerns about membership in demographic categories having causal effects.}
}

@article{JorbaLopezdeSa2024,
  title = {Intersectionality as Emergence},
  author = {Jorba, Marta and López de Sa, Dan},
  journal = {Philosophical Studies},
  volume = {181},
  pages = {1455--1475},
  year = {2024},
  doi = {10.1007/s11098-024-02155-1},
  note = {Proposes conceiving intersectionality as general metaphysical framework. Main claim: intersectional experiences emerge from conjunction of social categories when social structures make them relevant vis-à-vis discrimination and privilege. Three virtues: metaphysical neutrality, explanatory flexibility, methodological openness. Helps dissociate intersectionality from specific social constructionist views.}
}

@incollection{Ruiz2017,
  title = {Framing Intersectionality},
  author = {Ruíz, Elena},
  booktitle = {The Routledge Companion to the Philosophy of Race},
  editor = {Taylor, Paul C. and Alcoff, Linda Martín and Anderson, Luvell},
  pages = {335--348},
  year = {2017},
  publisher = {Routledge},
  note = {Term arose within black feminist intellectual tradition for identifying interlocking systems of oppression. As descriptive term, refers to ways human identity shaped by multiple social vectors and overlapping identity categories (sex, race, class) not readily visible in single-axis formulations. Explores strengths and limitations of intersectionality paradigm through academic history of concept.}
}

@article{Crenshaw2015,
  title = {Why Intersectionality Can't Wait},
  author = {Crenshaw, Kimberlé},
  journal = {The Washington Post},
  year = {2015},
  month = {September 24},
  url = {https://www.washingtonpost.com/news/in-theory/wp/2015/09/24/why-intersectionality-cant-wait/},
  note = {Describes intersectionality as "an analytic sensibility, a way of thinking about identity and its relationship to power." Foundational characterization from originator of intersectionality framework in legal scholarship. Emphasizes analytical rather than merely descriptive nature of intersectionality.}
}

@article{Garry2011,
  title = {Intersectionality, Metaphors, and the Multiplicity of Gender},
  author = {Garry, Ann},
  journal = {Hypatia},
  volume = {26},
  number = {4},
  pages = {826--850},
  year = {2011},
  doi = {10.1111/j.1527-2001.2011.01194.x},
  note = {Drawing on pragmatism, identifies three characteristic uses of intersectionality: as metaphor, as heuristic, and as paradigm. Examines how different conceptualizations shape understanding and application of intersectional analysis in feminist philosophy.}
}

