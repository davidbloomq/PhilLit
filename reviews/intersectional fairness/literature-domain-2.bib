@article{Bowleg2008,
  title = {When Black + Lesbian + Woman ≠ Black Lesbian Woman: The Methodological Challenges of Qualitative and Quantitative Intersectionality Research},
  author = {Bowleg, Lisa},
  journal = {Sex Roles},
  volume = {59},
  pages = {312--325},
  year = {2008},
  doi = {10.1007/s11199-008-9400-z},
  note = {Examines methodological challenges of intersectionality research in both qualitative and quantitative contexts. Argues that additive approaches (Black + Lesbian + Woman) fail to capture intersectional experiences (Black Lesbian Woman). Directly relevant to challenges of operationalizing intersectionality in algorithmic fairness.}
}

@incollection{Harding2004,
  title = {Rethinking Standpoint Epistemology: What is "Strong Objectivity"?},
  author = {Harding, Sandra},
