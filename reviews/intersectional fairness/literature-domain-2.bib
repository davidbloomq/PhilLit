}

@article{Hancock2007,
  title = {When Multiplication Doesn't Equal Quick Addition: Examining Intersectionality as a Research Paradigm},
  author = {Hancock, Ange-Marie},
  journal = {Perspectives on Politics},
  volume = {5},
  number = {1},
  pages = {63--79},
  year = {2007},
  doi = {10.1017/S1537592707070065},
  note = {Distinguishes intersectionality from additive models of identity and oppression. Examines intersectionality as research paradigm with specific methodological commitments. Relevant to understanding non-additive interactions in intersectional analysis - challenge for algorithmic approaches.}
}

@article{Cho2013,
