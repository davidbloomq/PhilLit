@article{Collins2015,
  title = {Intersectionality's Definitional Dilemmas},
  author = {Collins, Patricia Hill},
  journal = {Annual Review of Sociology},
  volume = {41},
  pages = {1--20},
  year = {2015},
  doi = {10.1146/annurev-soc-073014-112142},
  note = {Examines definitional challenges in intersectionality scholarship. Discusses tensions between different interpretations and uses of intersectionality. Relevant to understanding ontological uncertainty about what intersectionality is and what it requires.}
}

@book{Zack2024,
  title = {Intersectionality: A Philosophical Framework},
  author = {Zack, Naomi},
  year = {2024},
  publisher = {Oxford University Press},
  series = {The Romanell Lectures},
  isbn = {9780197693070},
  note = {Comprehensive philosophical treatment of intersectionality as analytical framework. Based on 2022 Romanell-Phi Beta Kappa lectures. Argues intersectionality logically depends on universal egalitarian humanism. Examines epistemological and metaphysical dimensions of intersectional analysis through analysis of current events including \#MeToo and COVID-19 pandemic.}
}

@article{Salem2018,
