@article{Parfit1997,
  title = {Equality and Priority},
  author = {Parfit, Derek},
  journal = {Ratio},
  volume = {10},
  number = {3},
  pages = {202--221},
  year = {1997},
  doi = {10.1111/1467-9329.00041},
  note = {Classic statement of prioritarianism. Prioritarianism gives greater moral weight to benefits to worse-off. Unlike egalitarianism, prioritarianism does not require equality per se but weighted concern for worst-off. Relevant to fairness trade-offs: should we weight improvements for worst-performing groups more heavily?}
}

@article{Frankfurt1987,
  title = {Equality as a Moral Ideal},
  author = {Frankfurt, Harry G.},
  journal = {Ethics},
  volume = {98},
  number = {1},
  pages = {21--43},
  year = {1987},
  note = {Foundational sufficientarian argument. What matters morally is not equality but whether people have enough. Challenges both egalitarian and utilitarian frameworks. Relevant to fairness audits: perhaps concern should be ensuring all groups meet threshold of adequate performance rather than equal performance across groups.}
}

@book{Slote1983,
  title = {Goods and Virtues},
  author = {Slote, Michael},
  year = {1983},
  publisher = {Clarendon Press},
  note = {Development of satisficing consequentialism related to sufficientarianism. Argues achieving "good enough" outcomes can be morally sufficient without maximization. Relevant to fairness contexts where perfect equality may be unattainable or unnecessary.}
}

@article{Kuppler2022,
  title = {From Fair Predictions to Just Decisions? Conceptualizing Algorithmic Fairness and Distributive Justice in the Context of Data-Driven Decision-Making},
  author = {Kuppler, Matthias and Kern, Christoph and Bach, Ruben L. and Kreuter, Frauke},
  journal = {Frontiers in Sociology},
  volume = {7},
  year = {2022},
  doi = {10.3389/fsoc.2022.883999},
  note = {Distinguishes fairness as property of prediction algorithm from justice as property of allocation principle in decision-making. Fairness and justice frequently conflated, with consequence that distributive justice concerns not addressed explicitly. Prioritarianism classified as optimization-type theory of distributive justice alongside utilitarianism. Prioritarianism's goal: maximize aggregate utility for all groups, giving greater weight to utility the worse off the group.}
}

@article{Binns2024,
  title = {What's Distributive Justice Got to Do with It? Rethinking Algorithmic Fairness from the Perspective of Approximate Justice},
  author = {Binns, Reuben},
  journal = {arXiv preprint arXiv:2407.12488},
  year = {2024},
  doi = {10.48550/arXiv.2407.12488},
  note = {Argues distributive justice principles (egalitarianism, desert-based justice, sufficiency and prioritarianism, consequentialism) should inform fairness. Can be formalized as mathematical formulas allowing patterns like maximin, prioritarianism, or sufficientarianism. Fairness criterion checking if approximately equal shares from all groups are above threshold accounts for structural injustices under sufficientarianism, leading to egalitarian distributive pattern.}
}

@article{Hertweck2022,
  title = {A Justice-Based Framework for the Analysis of Algorithmic Fairness-Utility Trade-Offs},
  author = {Hertweck, Corinna and Baumann, Joachim and Loi, Michele and Vigan√≤, Eleonora and Heitz, Christoph},
  journal = {arXiv preprint arXiv:2206.02891},
  year = {2022},
  doi = {10.48550/arXiv.2206.02891},
  note = {Addresses trade-off between fairness and efficiency, and between public safety and prevailing algorithmic fairness notions, which can be large in practice. Proposes justice-based framework for analyzing and navigating these trade-offs rather than treating them as purely technical optimization problems.}
}

@article{Holm2023,
  title = {Egalitarianism and Algorithmic Fairness},
  author = {Holm, Sune},
  journal = {Philosophy \& Technology},
  volume = {36},
  year = {2023},
  doi = {10.1007/s13347-023-00607-w},
  note = {Examines what fairness means for algorithmic classifications across socially salient groups. Classification parity criteria require equality across groups for performance measures (error rates). Interprets criticism of classification parity as leveling down objection. Interprets egalitarianism of classification parity as deontic egalitarianism. Presents egalitarian response to leveling down objection against parity criteria.}
}

@article{Mittelstadt2023,
  title = {The Unfairness of Fair Machine Learning: Levelling Down and Strict Egalitarianism by Default},
  author = {Mittelstadt, Brent and Wachter, Sandra and Russell, Chris},
  journal = {Philosophy \& Technology},
  year = {2023},
  doi = {10.2139/ssrn.4331652},
  note = {Critics argue levelling down should be rejected in fair ML because: unnecessarily harms advantaged groups when performance intrinsically valuable, demonstrates lack of equal concern for affected groups, fails to meet aims of many viable distributive justice theories. Challenges default egalitarian assumptions in fairness metrics.}
}

@article{Green2022,
  title = {Escaping the Impossibility of Fairness: From Formal to Substantive Algorithmic Fairness},
  author = {Green, Ben},
  journal = {Philosophy \& Technology},
  volume = {35},
  year = {2022},
  doi = {10.1007/s13347-022-00584-6},
  note = {Efforts to promote equitable public policy with algorithms appear constrained by "impossibility of fairness" (incompatibility between mathematical fairness definitions). Raises question: how can computer scientists and policymakers support equitable policy reforms with algorithms? Argues for moving from formal to substantive fairness accounting for social context.}
}

@article{Lee2021,
  title = {Formalising Trade-Offs Beyond Algorithmic Fairness: Lessons from Ethical Philosophy and Welfare Economics},
  author = {Lee, Michelle Seng Ah and Floridi, Luciano and Singh, Jatinder},
  journal = {AI and Ethics},
  volume = {1},
  number = {4},
  pages = {529--544},
  year = {2021},
  doi = {10.1007/s43681-021-00067-y},
  note = {Reductionist representations of fairness often bear little resemblance to real-life fairness considerations, which are highly contextual. Fairness metrics implemented within narrow toolkits difficult to integrate into broader ethical assessments. Draws on welfare economics and ethical philosophy for richer framework for trade-offs.}
}

@article{Crisp2003,
  title = {Equality, Priority, and Compassion},
  author = {Crisp, Roger},
  journal = {Ethics},
  volume = {113},
  number = {4},
  pages = {745--763},
  year = {2003},
  note = {Philosophical analysis of relationship between egalitarianism and prioritarianism. Argues prioritarian concern for worst-off can be grounded in compassion rather than equality. Relevant to justifying differential treatment of groups in fairness contexts.}
}

@article{Shields2012,
  title = {The Prospects for Sufficientarianism},
  author = {Shields, Liam},
  journal = {Utilitas},
  volume = {24},
  number = {1},
  pages = {101--117},
  year = {2012},
  note = {Examines whether sufficientarianism is viable distributive justice theory. Discusses "priority shift" view: different principles apply below and above threshold. Relevant to fairness: perhaps different fairness principles apply depending on whether groups meet basic adequacy threshold.}
}

@article{Herlitz2019,
  title = {The Indispensability of Sufficientarianism},
  author = {Herlitz, Anders},
  journal = {Critical Review of International Social and Political Philosophy},
  volume = {22},
  number = {7},
  pages = {929--942},
  year = {2019},
  doi = {10.1080/13698230.2018.1479817},
  note = {Argues sufficientarian principles are indispensable in distributive ethics. Provides framework for thinking about obligations toward desperately badly off. Appropriate principle reflecting obligations to desperately badly off cannot allow trade-offs between benefits to desperately bad off and merely bad off. Relevant to fairness: perhaps we cannot trade off intersectional groups below adequacy threshold for overall fairness improvements.}
}

@article{Corbett-Davies2018,
  title = {The Measure and Mismeasure of Fairness},
  author = {Corbett-Davies, Sam and Goel, Sharad},
  journal = {Journal of Machine Learning Research},
  year = {2018},
  note = {Influential analysis of fairness metrics and their normative foundations. Different metrics embody different normative commitments. No metric is universally appropriate - depends on normative goals and context. Measurement of fairness requires normative judgment not just technical optimization.}
}

@inproceedings{Binns2018,
  title = {Fairness in Machine Learning: Lessons from Political Philosophy},
  author = {Binns, Reuben},
  booktitle = {Proceedings of Machine Learning Research},
  volume = {81},
  pages = {149--159},
  year = {2018},
  note = {Argues fairness metrics implicitly encode political-philosophical commitments. Makes these commitments explicit by connecting metrics to theories from political philosophy. Different contexts require different normative frameworks, thus different fairness approaches.}
}
