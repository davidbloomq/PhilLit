@incollection{Haslanger2012,
  title = {Resisting Reality: Social Construction and Social Critique},
  author = {Haslanger, Sally},
  year = {2012},
  publisher = {Oxford University Press},
  note = {Major work on social construction and social ontology. Distinguishes between causal (social) construction and constitutive (social) construction. Causal: social factors involved in causing kind to be. Constitutive: social factors are "constitutive" or "ontological." Also distinguishes construction of representations (ideas, concepts, predicates) from construction of objects (people, categories, events, properties).}
}

@article{Haslanger2003,
  title = {Social Construction: The "Debunking" Project},
  author = {Haslanger, Sally},
  journal = {Socializing Metaphysics: The Nature of Social Reality},
  editor = {Schmitt, Frederick F.},
  pages = {301--325},
  year = {2003},
  publisher = {Rowman & Littlefield},
  note = {Articulates framework for understanding social construction. Relevant to whether demographic categories in fairness contexts are best understood as causally or constitutively constructed, with implications for how groups should be specified.}
}

@article{Sveinsdottir2013,
  title = {The Social Construction of Human Kinds},
  author = {Sveinsdóttir, Ásta Kristjana},
