  },
  keywords = {Gadamer, hermeneutics, political-implications, Medium}
}

@book{jones2017edmund,
  author = {Jones, Emily},
  title = {Edmund Burke and the Invention of Modern Conservatism, 1830-1914: An Intellectual History},
