@article{turner2021tradition,
  author = {Turner, Stephen P.},
  title = {The Tradition of Post-Tradition},
  journal = {Philosophy of the Social Sciences},
  year = {2021},
  volume = {51},
  number = {6},
  pages = {531--554},
  doi = {10.1177/00483931211016046},
  note = {
  CORE ARGUMENT: Turner traces the intellectual history of "post-traditional" discourse in
