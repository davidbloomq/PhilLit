}

@article{melancon2021philosophy,
  author = {Melançon, Jérôme},
  title = {Philosophy as a Mediating Institution and the Problem of Tradition in Canada},
  journal = {American Review of Canadian Studies},
  year = {2021},
  volume = {51},
  number = {3},
  pages = {426--442},
  doi = {10.1080/02722011.2021.1946831},
  note = {
  CORE ARGUMENT: Drawing on Fernand Dumont's concept of "mediating institutions" and Himani
  Bannerji's critique of multiculturalism, Melançon examines how philosophy can mediate between
  diverse traditions in contexts of cultural plurality. Dumont saw philosophy as referring to
  a tradition of radical self-questioning, a second-order tradition that reflects on first-order
  traditions. However, Dumont's framework addressed Quebec's social changes without adequately
  accounting for multiple coexisting traditions. Melançon brings Dumont into dialogue with
