  POSITION: Historical sociology and intellectual history. Genealogical critique of post-
  traditional discourse, revealing its own traditional structure and questioning the possibility
  of genuinely post-traditional society.
  },
  keywords = {post-traditional, modernity, Weber, Giddens, reflexive-modernization, Medium}
}

@article{sokolov2021problem,
  author = {Sokolov, A. and Kuznetsov, N.},
