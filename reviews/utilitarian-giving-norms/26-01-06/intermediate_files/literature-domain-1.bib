}

@book{kagan1989limits,
  author = {Kagan, Shelly},
  title = {The Limits of Morality},
  year = {1989},
  publisher = {Oxford University Press},
  doi = {10.1093/0198239165.001.0001},
  note = {
  CORE ARGUMENT: Kagan defends an uncompromising consequentialism without agent-centered prerogatives or constraints. He argues that common moral intuitions supporting limits on beneficence obligations rest on confused reasoning. Morality may be extremely demanding, requiring significant sacrifice of personal projects and interests to promote the greater good.

  RELEVANCE: Provides the most demanding utilitarian position against which moderate views define themselves. Essential for understanding the demandingness objection that shapes debates about charitable obligations. His rejection of options and constraints forces the question: if utilitarianism is true, can there be any principled limit to beneficence requirements?

  POSITION: Maximizing act-consequentialism. Represents the demanding pole of utilitarian views on aid obligations.
  },
  keywords = {consequentialism, demandingness, beneficence, High}
}

@article{murphy1993demands,
  author = {Murphy, Liam B.},
  title = {The Demands of Beneficence},
  journal = {Philosophy \& Public Affairs},
  year = {1993},
  volume = {22},
  number = {4},
  pages = {267--292},
  note = {
  CORE ARGUMENT: Murphy introduces the "cooperative principle" to limit beneficence obligations: agents are required to do their fair share of promoting the good, where the fair share is determined by what would be required if everyone complied. This avoids both the over-demandingness of act-utilitarianism and the under-demandingness of views that make beneficence optional.

  RELEVANCE: Crucial for the project's investigation of reasonable giving norms. Murphy's cooperative principle provides a principled way to set moderate thresholds (like 10% of income) that avoid extreme demands while maintaining moral seriousness. His framework directly addresses how to specify beneficence obligations in non-ideal conditions where not everyone complies.

  POSITION: Cooperative consequentialism - a moderate position between maximizing consequentialism and views that treat beneficence as supererogatory.
  },
  keywords = {beneficence, cooperative-principle, fair-share, High}
}

@book{cullity2004moral,
  author = {Cullity, Garrett},
  title = {The Moral Demands of Affluence},
  year = {2004},
  publisher = {Oxford University Press},
  doi = {10.1093/0199258112.001.0001},
  note = {
  CORE ARGUMENT: Cullity develops a sophisticated analysis of Singer's argument, identifying the Life-Saving Analogy as its key move. He argues that iterative reasoning creates apparently unlimited demands: each additional dollar saves lives, so there seems no principled stopping point short of destitution. Cullity defends moderate beneficence requirements by appealing to the intrinsic value of autonomy and the moral importance of being able to pursue one's own projects.

  RELEVANCE: Provides the most thorough contemporary analysis of utilitarian beneficence arguments and their limits. Essential for understanding why income-based percentage norms (like 10%) might be justified against the iterative reasoning that suggests unlimited demands. Cullity's autonomy-based solution offers a framework for setting reasonable thresholds that respect both beneficence and personal integrity.

  POSITION: Moderate consequentialism tempered by autonomy considerations. Accepts strong beneficence obligations while rejecting extreme demandingness.
  },
  keywords = {beneficence, demandingness, autonomy, High}
}

@book{scheffler1982rejection,
