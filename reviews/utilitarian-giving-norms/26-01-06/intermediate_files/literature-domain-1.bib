}

@article{hooker2000ideal,
  author = {Hooker, Brad},
  title = {Ideal Code, Real World: A Rule-Consequentialist Theory of Morality},
  journal = {Ethics},
  year = {2000},
  publisher = {Oxford University Press},
  doi = {10.1093/0199256578.001.0001},
  note = {
  CORE ARGUMENT: Hooker defends rule-consequentialism: acts are right if they conform to rules whose general internalization would produce the best consequences. He argues this yields moderate beneficence requirements - internalization of demanding act-utilitarian principles would have worse consequences than moderate principles requiring reasonable but not extreme giving. Rule-consequentialism thus avoids demandingness while remaining consequentialist.

  RELEVANCE: Provides a utilitarian justification for moderate giving norms like percentage-of-income pledges. If Hooker is right, the best consequences come from internalizing moderate principles rather than maximizing ones. This could justify 10% income norms on utilitarian grounds even if individual acts of greater giving would produce more good. Relevant to whether asset-based norms might be better internalized than income-based ones.

  POSITION: Rule-consequentialism as a form of indirect utilitarianism. Supports moderate beneficence obligations on consequentialist grounds.
  },
  keywords = {rule-consequentialism, internalization, moderate-demands, High}
}

@book{unger1996living,
  author = {Unger, Peter},
  title = {Living High and Letting Die: Our Illusion of Innocence},
  year = {1996},
  publisher = {Oxford University Press},
  doi = {10.1093/0195108590.001.0001},
  note = {
  CORE ARGUMENT: Unger presents cases showing that psychological factors distort our moral judgments about aiding distant strangers. Through thought experiments, he argues that there's no morally relevant difference between failing to save a child drowning in front of you and failing to donate to effective charities that save children's lives. We have very strong obligations to donate most of our income to effective aid organizations.

  RELEVANCE: Represents the demanding wing of utilitarian approaches to aid, similar to early Singer. Unger's psychological analysis is relevant to understanding why income-based norms might be more psychologically salient than asset-based ones, even if the latter are more rationally justified. His cases highlight how our intuitions about charitable obligations may be distorted by morally irrelevant factors.

  POSITION: Demanding consequentialism with emphasis on psychological biases in moral judgment.
  },
  keywords = {beneficence, moral-psychology, demandingness, Medium}
}

