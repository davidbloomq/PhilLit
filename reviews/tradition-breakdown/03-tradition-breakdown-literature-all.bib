@article{vanbeeck2024myths,
  author = {Van Beeck, Evelien},
  title = {The Myths of (Re)Enchantment: Anthropological Reflections on a Mistaken Narrative},
  journal = {Review of Metaphysics},
  year = {2024},
  volume = {77},
  number = {4},
  pages = {683--705},
  doi = {10.1353/rvm.2024.a929312},
  note = {
