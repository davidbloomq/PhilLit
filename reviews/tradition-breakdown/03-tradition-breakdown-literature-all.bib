}

@book{taylor2007secular,
  author = {Taylor, Charles},
  title = {A Secular Age},
  year = {2007},
  publisher = {Harvard University Press},
  doi = {10.5040/9780567672803.ch-007},
  note = {
  CORE ARGUMENT: Taylor argues that Western modernity is defined not by the
  disappearance of religion but by a shift in the "conditions of belief"—from
  a world where belief in God was unproblematic to one where both belief and
  unbelief are contested options within an "immanent frame." Secularization is
  understood as disenchantment (loss of transcendent meaning embedded in the
  world) and the "disembedding" of individuals from traditional religious and
  social frameworks. Taylor traces this transformation through the Reformation,
  Enlightenment, and Romantic periods, showing how the disciplinary project of
  reform inadvertently created conditions for exclusive humanism and radical
  secularity.

  RELEVANCE: Essential for understanding how modernization pressures—particularly
  secularization and rationalization—create conditions where tradition loses its
  taken-for-granted status. Taylor's analysis of "disembedding" directly addresses
  how individuals are extracted from traditional contexts of meaning. His concept
  of the immanent frame illuminates how modern thought structures make
  transcendent sources of authority (including traditions) contestable. The work
  shows that external pressure need not destroy tradition overtly but can
  transform the epistemic conditions under which tradition must justify itself.

  POSITION: Weberian disenchantment framework, but emphasizes cultural-spiritual
  transformation rather than institutional rationalization. Critical of both
  subtraction narratives (secularization as simple loss of religion) and pure
  nostalgia for pre-modern enchantment.
  },
  keywords = {secularization, disenchantment, modernity, High}
}

@book{scott2017seeing,
  author = {Scott, James C.},
  title = {Seeing Like a State: How Certain Schemes to Improve the Human Condition Have Failed},
  year = {2017},
  publisher = {Yale University Press},
  doi = {10.2307/j.ctvxkn7ds},
  note = {
  CORE ARGUMENT: Scott argues that large-scale authoritarian state planning
  projects systematically fail because they impose simplified, legible schemas
  that override local practical knowledge ("metis"). High-modernist ideology—the
  belief that scientific-technical knowledge can reshape society for the
  better—combined with authoritarian state power produces disasters when it
  ignores the complex, context-dependent knowledge embedded in local practices
  and traditions. Scott analyzes Soviet collectivization, Tanzanian villagization,
  and scientific forestry as cases where state simplification destroyed
  functioning traditional systems. The book identifies four conditions for such
  disasters: administrative ordering, high-modernist ideology, authoritarian
  power, and a prostrate civil society unable to resist.

  RELEVANCE: Provides detailed analysis of how state-driven modernization
  projects destroy traditions by delegitimating and replacing local practical
  knowledge with centralized rational planning. Directly relevant to understanding
  tradition breakdown through external imposition of abstract rationalist schemes.
  Scott's concept of metis captures what Oakeshott calls "practical knowledge"—the
  kind of knowledge traditions embody and transmit. Shows mechanism by which
  modernization physically destroys traditional practices while claiming to improve
  human welfare.

  POSITION: Anarchist-influenced critique of state rationalism; sympathetic to
  local, traditional knowledge against centralizing modernization. Aligns with
  Oakeshott's rationalism critique but provides concrete historical cases.
  },
  keywords = {high-modernism, state-simplification, tradition-destruction, High}
}

@article{conrad2012enlightenment,
  author = {Conrad, Sebastian},
  title = {Enlightenment in Global History: A Historiographical Critique},
  journal = {The American Historical Review},
  year = {2012},
  volume = {117},
  number = {4},
  pages = {999--1027},
  doi = {10.1093/ahr/117.4.999},
  note = {
  CORE ARGUMENT: Conrad challenges Eurocentric narratives that treat the
  Enlightenment as a uniquely European phenomenon that then "spread" to the
  rest of the world through modernization. He argues that Enlightenment ideas
  emerged through global interactions and colonial encounters, not autonomous
  European development. The Weberian narrative of Western rationalization and
  disenchantment as distinctive to Europe misrepresents historical reality and
  serves to legitimate Western cultural imperialism. Conrad proposes replacing
  diffusion narratives with accounts of mutual constitution and entanglement.

  RELEVANCE: Critical for understanding how modernization narratives themselves
  function as instruments of tradition destruction in non-Western contexts.
  Challenges the assumption that rationalization and disenchantment are
  universally valid frameworks rather than parochial Western categories imposed
  globally. Illuminates how intellectual history of modernization theory reflects
  and reinforces colonial power relations that destroyed non-Western traditions
  by declaring them "backward" or "irrational."

  POSITION: Postcolonial critique of Weberian modernization theory; challenges
  both classical secularization thesis and its contemporary defenders. Emphasizes
  global entanglement over unidirectional Western influence.
  },
  keywords = {Enlightenment, Weber, global-history, Medium}
}

@article{whyte2019indigenous,
  author = {Whyte, Kyle and Talley, Jared L. and Gibson, Julia D.},
  title = {Indigenous Mobility Traditions, Colonialism, and the Anthropocene},
