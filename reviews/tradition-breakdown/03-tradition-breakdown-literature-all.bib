  },
  keywords = {colonialism, indigenous-knowledge, tradition-destruction, High}
}

@article{liu2025disenchantment,
  author = {Liu, Chang},
  title = {Disenchantment and the Democratic Charisma: Revisiting Weber's Diagnosis of Modernity},
