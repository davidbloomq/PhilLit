@article{beam1998gadamer,
  author = {Beam, C.},
  title = {Gadamer and MacIntyre: Tradition as a Resource of Rationality},
  year = {1998},
  volume = {25},
  pages = {15--35},
  note = {
  CORE ARGUMENT: Compares Gadamer's and MacIntyre's accounts of tradition, finding convergence on tradition as resource for rationality rather than obstacle. Both reject Enlightenment assumption that tradition and reason are opposed, instead showing how tradition provides the conceptual resources for rational inquiry. However, they differ on tradition's dynamism: Gadamer emphasizes ongoing dialogue and fusion of horizons, while MacIntyre focuses on epistemological crisis and rational reconstruction.

  RELEVANCE: Illuminates complementary perspectives on tradition rationality and failure. Gadamer's dialogical model suggests traditions fail when they lose capacity for "fusion of horizons" with novel perspectives. MacIntyre's crisis model emphasizes that traditions fail when they cannot narratively reconstruct themselves after fundamental challenges. Together they provide richer account of tradition breakdown mechanisms.

  POSITION: Synthesizes Gadamer and MacIntyre—tradition enables rationality through both ongoing dialogue (Gadamer) and crisis-driven reconstruction (MacIntyre).
  },
  keywords = {Gadamer, MacIntyre, tradition-rationality, comparison, Low}
}

@article{rouard2024karl,
  author = {Rouard, Christophe},
  title = {Karl Marx and Alasdair MacIntyre. What Telos? Whose Good?},
  journal = {Revista Portuguesa de Filosofia},
