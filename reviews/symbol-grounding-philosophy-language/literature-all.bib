  journal = {Philosophy & Technology},
  year = {2025},
  volume = {38},
  doi = {10.1007/s13347-025-00893-6},
  url = {https://www.semanticscholar.org/paper/0f8206b87a455f2fecb1b4de9dee84de0d510613},
  note = {
